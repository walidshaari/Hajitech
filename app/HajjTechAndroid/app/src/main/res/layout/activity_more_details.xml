<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MoreDetailsActivity">

        <GridLayout
            android:id="@+id/detailsGridLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:columnCount="3"
            android:rowCount="2">

            <ImageView
                android:id="@+id/button0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:contentDescription="Test"
                android:src="@drawable/men"
                android:tag="0" />

            <ImageView
                android:id="@+id/button1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:src="@drawable/running"
                android:tag="1"
                android:textSize="80sp" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:src="@drawable/temperature"
                android:tag="1"
                android:textSize="80sp" />

            <ImageView
                android:id="@+id/button3"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/accident"
                android:tag="2"
                android:textSize="80sp" />

            <ImageView
                android:id="@+id/button4"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/cpr"
                android:tag="3" />

            <ImageView
                android:id="@+id/button5"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_gravity="fill"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_rowWeight="1"
                android:src="@drawable/hooter"
                android:tag="3" />
        </GridLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="@drawable/edittext_background"
            android:gravity="start"
            android:hint="extara information (optional)"
            android:inputType="textLongMessage"
            android:padding="8dp"
            android:textColorLink="#21D0C3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:padding="10dp">

            <ImageView
                android:id="@+id/cancel_request_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_round_cancel" />

            <ImageView
                android:id="@+id/confirmSendButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:src="@drawable/ic_check_circle" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>